@import url("http://fonts.googleapis.com/css?family=Roboto\+Slab:400,700|Roboto:400,700,700italic,400italic")

*
  box-sizing border-box

html
  font-family 'Roboto Slab', serif

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

md-toolbar
  &.md-default-theme
    background-color black

.techs
  flex:0.5;
  &.md-default-theme md-tab
    color: #999
  .md-header
    background-color: #202020 !important
    border-bottom: 1px solid #ffff85
// injector
// endinjector

.ace_editor {
  height: calc(100vh - 112px);
  margin:0;
}

#preview {
  border: 0;
  flex:0.5;
}

.btn-github {
  background-position: 9px 8px;
  box-sizing: border-box;
  color: rgb(255, 255, 255);
  display: inline-block;
  height: 45px;
  text-align: center;
  text-decoration: none;
  width: 206.390625px;
  background: rgb(102, 102, 102) url(../assets/images/octocat.png) no-repeat scroll 9px 8px / 41px padding-box border-box;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 5px 5px 5px 5px;
  font: 14.3999996185303px/20.1599998474121px 'Lucida Grande', 'Lucida Sans Unicode', Tahoma, sans-serif;
  padding: 12px 16px 12px 58px;

  &:hover {
    background: rgb(255, 255, 255) url(../assets/images/octocat.png) no-repeat scroll 9px -61px / 41px padding-box border-box;
    background-position: 9px -61px;
    color: rgb(0, 0, 0);
  }
}

.face {
  width: 48px;
  margin: 0 16px;
  border-radius: 50%;
  border: 1px solid #ddd;

  + span {
    font-size: .75em;
  }}

.md-button + .md-button{
  margin-left: 10px;
}

.handle {
    height: calc(100vh - 64px);
    width: 16px;
    border-right: 1px solid #202020;
    background: #272727;
    border-left: 1px solid #202020;
    cursor: col-resize;
    transition: all ease-in 0.1s;
}


.fb{
  position:absolute;
  background:black;
  width:100%;
  height:calc(100vh - 64px);
  display: flex;
}
