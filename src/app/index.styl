@import url("http://fonts.googleapis.com/css?family=Roboto\+Slab:400,700|Roboto:400,700,700italic,400italic")

*
  box-sizing border-box

html
  font-family 'Roboto Slab', serif

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

md-toolbar
  &.md-default-theme
    background-color black

.techs
  display flex
  flex-flow row wrap
  md-card
    img
      &.pull-right
        float right
        width 50px
// injector
// endinjector

.ace_editor {
  min-height: 200px;
}

#preview {
  width 90%;
  margin: 0 auto;
}

.btn-github {
  background-position: 9px 8px;
  box-sizing: border-box;
  color: rgb(255, 255, 255);
  display: inline-block;
  height: 45px;
  text-align: center;
  text-decoration: none;
  width: 206.390625px;
  background: rgb(102, 102, 102) url(http://assets.codepen.io/assets/buttons/octocat.png) no-repeat scroll 9px 8px / 41px padding-box border-box;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 5px 5px 5px 5px;
  font: 14.3999996185303px/20.1599998474121px 'Lucida Grande', 'Lucida Sans Unicode', Tahoma, sans-serif;
  padding: 12px 16px 12px 58px;

  &:hover {
    background: rgb(255, 255, 255) url(http://assets.codepen.io/assets/buttons/octocat.png) no-repeat scroll 9px -61px / 41px padding-box border-box;
    background-position: 9px -61px;
    color: rgb(0, 0, 0);
  }
}
