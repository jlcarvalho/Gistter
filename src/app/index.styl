@import url("http://fonts.googleapis.com/css?family=Roboto\+Slab:400,700|Roboto:400,700,700italic,400italic")

*
  box-sizing border-box

html
  font-family 'Roboto Slab', serif

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

md-toolbar
  &.md-default-theme
    background-color black

.techs
  display flex
  flex-flow row wrap
  md-content
    box-shadow 0px 0px 8px 0px rgba(0, 0, 0, 0.7)
    .title {
      font-weight: bold;
      padding: 14px 15px 15px;
      text-align: right;
      color: white;
      background: #2F3129;
      border-bottom: 1px solid rgba(0,0,0, .25);
    }
// injector
// endinjector

.ace_editor {
  height: calc(100vh / 2 - 89px);
  margin:0;
}

#preview {
  width 100%;
  height: calc(100vh / 2 - 39px);
  border: 0;
}

.btn-github {
  background-position: 9px 8px;
  box-sizing: border-box;
  color: rgb(255, 255, 255);
  display: inline-block;
  height: 45px;
  text-align: center;
  text-decoration: none;
  width: 206.390625px;
  background: rgb(102, 102, 102) url(../assets/images/octocat.png) no-repeat scroll 9px 8px / 41px padding-box border-box;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 5px 5px 5px 5px;
  font: 14.3999996185303px/20.1599998474121px 'Lucida Grande', 'Lucida Sans Unicode', Tahoma, sans-serif;
  padding: 12px 16px 12px 58px;

  &:hover {
    background: rgb(255, 255, 255) url(../assets/images/octocat.png) no-repeat scroll 9px -61px / 41px padding-box border-box;
    background-position: 9px -61px;
    color: rgb(0, 0, 0);
  }
}

.face {
  width: 48px;
  margin: 0 16px;
  border-radius: 50%;
  border: 1px solid #ddd;

  + span {
    font-size: .75em;
  }}

md-button + md-button{
  margin-left: 10px;
}

.handle {
    height: 10px;
    border-bottom: 1px solid black;
    background: white;
    border-top: 1px solid black;
    cursor: row-resize;
    top: 0 !important;
    position:relative;
}
